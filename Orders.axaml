<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MyApp.Orders"
        Title="Orders">
        <Grid>
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="signUpButton" Content="Done" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" Click="back"/>
          </StackPanel>
          <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
            <TextBlock Name="Orders_text" Text="Доступные заказы:" FontWeight="Bold"/>
            <ListBox x:Name="orders" SelectionChanged="ListBox_SelectionChanged">
            </ListBox>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Create new order" Click="createOrderButton" Margin="0,100" Background="AliceBlue"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" >
            <Button Name="Back" Content="Back" VerticalAlignment="Center" Margin="15,40,0,0" Background="BlanchedAlmond" Click="back" ></Button>
        </StackPanel>
        </Grid> 
</Window>
